{
  "name": "sherlock",
  "version": "0.0.0",
  "scripts": {
    "postinstall": "typings install",
    "ts": "tsc",
    "ts:clean": "trash index.js && trash src/**/*.js",
    "bundle": "browserify index.js > bundle.js",
    "bundle:clean": "trash bundle.js",
    "minify": "uglifyjs bundle.js --output bundle.min.js --source-map bundle.map --mangle --compress",
    "minify:clean": "trash bundle.min.js && trash bundle.map",
    "build": "npm run ts && npm run bundle && npm run minify && npm run styles",
    "build:clean": "npm run ts:clean && npm run bundle:clean && npm run minify:clean && npm run styles:clean",
    "scss": "node-sass index.scss index.css",
    "autoprefix": "postcss --use autoprefixer --replace --autoprefixer.browsers 'last 2 versions' index.css",
    "styles": "npm run scss && npm run autoprefix",
    "styles:clean": "trash index.css",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "http-server -a 0.0.0.0 -p 9000"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "browserify": "^13.0.1",
    "http-server": "^0.9.0",
    "node-sass": "^3.7.0",
    "postcss-cli": "^2.5.2",
    "trash-cli": "^1.3.0",
    "typescript": "^1.8.10",
    "typings": "^1.0.5",
    "uglify-js": "^2.6.2"
  },
  "dependencies": {
    "angular": "^1.5.6"
  }
}

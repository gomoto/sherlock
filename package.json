{
  "name": "sherlock",
  "version": "0.0.0",
  "scripts": {
    "postinstall": "typings install",
    "ts": "tsc",
    "ts:clean": "trash src/**/*.js && trash src/*.js",
    "prebundle": "mkdir -p build",
    "bundle": "browserify src/app.js > $npm_package_bundle",
    "bundle:clean": "trash $npm_package_bundle",
    "minify": "uglifyjs $npm_package_bundle --output $npm_package_bundlemin --source-map $npm_package_bundlemap --prefix relative --mangle --compress",
    "minify:clean": "trash $npm_package_bundlemin && trash $npm_package_bundlemap",
    "style:scss": "node-sass src/app.scss $npm_package_css",
    "style:autoprefix": "postcss --use autoprefixer --replace --autoprefixer.browsers 'last 2 versions' $npm_package_css",
    "style": "npm run style:scss && npm run style:autoprefix",
    "style:clean": "trash $npm_package_css",
    "html:pre": "cp src/app.html $npm_package_html",
    "html:mv": "mv $npm_package_htmltmp $npm_package_html",
    "html:css": "html-injector $npm_package_html css $npm_package_css > $npm_package_htmltmp && npm run html:mv",
    "html:js:dev": "html-injector $npm_package_html js $npm_package_bundle > $npm_package_htmltmp && npm run html:mv",
    "html:js": "html-injector $npm_package_html js $npm_package_bundlemin > $npm_package_htmltmp && npm run html:mv",
    "html:templates": "html-injector $npm_package_html template src/**/*.html > $npm_package_htmltmp && npm run html:mv",
    "html:minify": "html-minifier --collapse-whitespace --process-scripts text/ng-template $npm_package_html > $npm_package_htmltmp && npm run html:mv",
    "html:dev": "npm run html:pre && npm run html:js:dev && npm run html:css && npm run html:templates && npm run html:minify",
    "html": "npm run html:pre && npm run html:js && npm run html:css && npm run html:templates && npm run html:minify",
    "html:clean": "trash $npm_package_html && trash $npm_package_htmltmp",
    "build:dev": "npm run ts && npm run bundle && npm run style && npm run html:dev",
    "build": "npm run ts && npm run bundle && npm run minify && npm run style && npm run html",
    "build:clean": "npm run ts:clean && trash build && npm run html:clean",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "http-server -a 0.0.0.0 -p 9000"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "browserify": "^13.0.1",
    "html-injector": "^1.2.2",
    "html-minifier": "^2.1.3",
    "http-server": "^0.9.0",
    "node-sass": "^3.7.0",
    "postcss-cli": "^2.5.2",
    "trash-cli": "^1.3.0",
    "typescript": "^1.8.10",
    "typings": "^1.0.5",
    "uglify-js": "^2.6.2"
  },
  "dependencies": {
    "angular": "^1.5.6",
    "angular-ui-router": "^0.3.1",
    "pouchdb": "^5.4.1"
  },
  "bundle": "build/bundle.js",
  "bundlemin": "build/bundle.min.js",
  "bundlemap": "build/bundle.map",
  "css": "build/app.css",
  "html": "index.html",
  "htmltmp": "index.tmp.html"
}

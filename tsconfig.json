{
  "compilerOptions": {
    "module": "commonjs",
    "noEmitOnError": false,
    "noImplicitAny": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "filesGlob": [
    "src/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "typings/globals/angular-ui-router/index.d.ts",
    "typings/globals/angular/index.d.ts",
    "typings/globals/jquery/index.d.ts",
    "typings/globals/lodash/index.d.ts",
    "typings/index.d.ts",
    "typings/pouchdb/pouchdb.d.ts"
  ]
}
